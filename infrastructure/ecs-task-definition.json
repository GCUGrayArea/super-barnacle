{
  "family": "skyfi-mcp-server",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/skyfi-mcp-execution-role",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/skyfi-mcp-task-role",
  "containerDefinitions": [
    {
      "name": "skyfi-mcp-server",
      "image": "ACCOUNT_ID.dkr.ecr.REGION.amazonaws.com/skyfi-mcp:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3000"
        },
        {
          "name": "SKYFI_API_BASE_URL",
          "value": "https://api.skyfi.com/v1"
        },
        {
          "name": "ENABLE_CACHE",
          "value": "false"
        }
      ],
      "secrets": [
        {
          "name": "SKYFI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:skyfi-mcp/api-key"
        },
        {
          "name": "OPENAI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:skyfi-mcp/openai-key"
        },
        {
          "name": "LOG_LEVEL",
          "valueFrom": "arn:aws:ssm:REGION:ACCOUNT_ID:parameter/skyfi-mcp/log-level"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/skyfi-mcp-server",
          "awslogs-region": "REGION",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "node -e \"require('http').get('http://localhost:3000/health', (res) => { process.exit(res.statusCode === 200 ? 0 : 1); }).on('error', () => process.exit(1));\""
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 40
      }
    }
  ],
  "tags": [
    {
      "key": "Application",
      "value": "skyfi-mcp-server"
    },
    {
      "key": "Environment",
      "value": "production"
    },
    {
      "key": "ManagedBy",
      "value": "ecs"
    }
  ]
}
